<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="@dimen/corner_radius"
        android:backgroundTint="#EFF1F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/image_book"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_bookTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#000"
            android:ellipsize="end"
            android:layout_gravity="start"
            android:layout_marginTop="6dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/image_book"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/name_writerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/name_bookTV"
            app:layout_constraintTop_toBottomOf="@id/name_bookTV" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


